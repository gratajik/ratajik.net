<?xml version="1.0"?>
<configuration>

  <system.webServer>
    <rewrite>
      <rules> 
        <rule name="foodp0rn.com" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^(www.)?foodp0rn.(com|nl)" />
            <add input="{PATH_INFO}" pattern="^/foodp0rn/" negate="true" />
          </conditions>
          <action type="Rewrite" url="\foodp0rn.com\{R:0}" />
        </rule>

        <rule name="rataart.com" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^(www.)?rataart.(com|nl)" />
            <add input="{PATH_INFO}" pattern="^/rataart/" negate="true" />
          </conditions>
          <action type="Rewrite" url="\rataart.com\{R:0}" />
        </rule>  

        <rule name="biodancer.com" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^(www.)?biodancer.(com|nl)" />
            <add input="{PATH_INFO}" pattern="^/biodancer/" negate="true" />
          </conditions>
          <action type="Rewrite" url="\biodancer.com\{R:0}" />
        </rule>  
      </rules>
    </rewrite> 
  </system.webServer>

</configuration>